{
    "name": "GistGeniie",
    "version": "1.0",
    "description": "Simplify web content understanding with this Chrome plugin that employs ChatGPT for instant, professional-grade summaries.",
    "manifest_version": 3,  
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "icons":{
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "action":{
        "default_popup": "popup.html"
    },
    "background":{
        "service_worker": "background.js"
    }

}